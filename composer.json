{
    "name": "idealogica/lavanda",
    "description": "Administrator control panel for Laravel application.",
    "keywords": ["laravel", "crud", "admin", "control", "panel", "administrator", "lavanda"],
    "homepage": "https://github.com/idealogica/lavanda",
    "license": "MIT",
    "authors": 
    [
        {
            "name": "Konstatin Nikiforov",
            "email": "konstantin@idealogica.me",
            "homepage": "http://konstantin.idealogica.me"
        }
    ],
    "require": 
    {
        "php": ">=5.5.9",
        "laravel/framework": "~5.1",
        "kris/laravel-form-builder": "~1.6",
        "mistic100/randomcolor": "~1.0",
        "idealogica/color" : "~1.0.1"
    },
    "require-dev": 
    {
        "phpunit/phpunit": "~4.0",
        "orchestra/testbench": "~3.1",
        "mikey179/vfsstream": "~1.6"
    },    
    "autoload": 
    {
        "psr-4": 
        {
            "Idealogica\\": "src/"
        },    
        "files": 
        [
            "src/helpers.php"
        ]       
    },
    "autoload-dev": 
    {
        "classmap":
        [
            "tests/LavandaTestCase.php",
            "tests/LavandaDBTestCase.php",
            "tests/models/Comment.php",
            "tests/models/Post.php",
            "tests/models/Tag.php"        
        ]
    },
    "config": 
    {
        "preferred-install": "dist"
    }
}
